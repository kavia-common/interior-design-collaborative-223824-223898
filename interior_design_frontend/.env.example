# Frontend environment variables (prefix REACT_APP_ required by CRA)

# Preferred API base for backend endpoints
REACT_APP_API_BASE=https://api.example.com

# Legacy / alternate backend URL (fallback if API_BASE not set)
REACT_APP_BACKEND_URL=

# Frontend public URL (optional)
REACT_APP_FRONTEND_URL=http://localhost:3000

# WebSocket URL (optional)
REACT_APP_WS_URL=

# Node environment override (optional)
REACT_APP_NODE_ENV=development

# Feature flags: JSON or comma-separated list
# Examples:
# REACT_APP_FEATURE_FLAGS={"gallery":true,"betaEditor":false}
# REACT_APP_FEATURE_FLAGS=gallery,betaEditor
REACT_APP_FEATURE_FLAGS=gallery
